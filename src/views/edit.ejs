<!DOCTYPE html>
<html lang="pt-br">
    <% include('partials/head.ejs') %> 
<body>
    <h1><%= title %> </h1>

     <%- include('partials/navbar.ejs') %> 

    <form action="/edit/<%= user._id %> " method="POST">
        <div>
            <label for="">Nome</label>
            <input type="text" name="name" placeholder="Digite o seu nome" value="<%= user.name %>">
        </div>
        <div>
            <label for="">Idade</label>
            <input type="text" name="age" placeholder="Digite a sua idade" value="<%= user.age %>">
        </div>
        <div>
            <label for="">Email</label>
            <input type="text" name="email" placeholder="Digite o seu email" value="<%= user.email %>">
        </div>
        <button type="submit">Editar</button>
    </form>
    
    <% if (typeof message !== 'undefined') { %>
        <%= message %>
    <% } %> 

    <%- include('partials/foot.ejs') %> 

</body>
</html>